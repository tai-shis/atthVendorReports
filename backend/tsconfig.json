{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    // "strictNullChecks": true,
    "strictFunctionTypes": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}